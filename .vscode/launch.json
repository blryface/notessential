  "version": "0.2.0",
  "configurations": [
    {
      "command": "pnpm dev",
      "name": "Launch development environment",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "pnpm build",
      "name": "Build prod website",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Launch Chrome against localhost",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
